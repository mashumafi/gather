div(data-role="header", data-position="fixed", data-id='header')
    a#btnBack(href="#", data-icon="back") Back
    h1 Details
    <% if(!expired) { %>
    <% if(owner===true) { %>
    a#btnEdit(href="#", data-icon="gear") Edit
    <% } else if(owner===false) { %>
    a#btnUnJoin(href="#", data-icon="minus") Unjoin
    <% } else if(owner===null) { %>
    a#btnJoin(href="#", data-icon="plus") Join
    <% } %>
    <% } %>
div(data-role="content")
    input(type="hidden", name='id', value=!"<%= _id %>")
    div(data-role="collapsible", data-inset="false", data-collapsed="false")
        h3 Name
        p <%= name %>
    div(data-role="collapsible", data-inset="false", data-collapsed="false")
        h3 Description
        p <%= description %>
    <% if(expired) { %>
    div(data-role="collapsible", data-inset="false", data-collapsed="false")
        h3 Rating
        p Not implemented
    <% } else { %>
    div(data-role="collapsible", data-inset="false", data-collapsed="false")
        h3 Begin
        p <%= begin %>
    div(data-role="collapsible", data-inset="false")
        h3 End
        p <%= end %>
    div(data-role="collapsible", data-inset="false")
        h3 Members (<%= members.length %>)
        div
            <% for(var i = 0; i < members.length; i++) { %>
            div
                <% if(members[i].owner) { %>
                span
                    img(src='image/crown.png')
                <% } %>
                <%= members[i].user.username %>
            <% } %>
    div(data-role="collapsible", data-inset="false", data-collapsed="false")
        h3 Map
        p <%= location %>
    <% } %>