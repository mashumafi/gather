div(data-role="header", data-position="fixed", data-id='header')
    a#btnBack(href="#", data-icon="delete") Cancel
    h1 <%= isNew ? 'Create' : 'Edit' %>
    <% if(!isNew) { %>
    a#btnDelete(href="#", data-icon="delete") Delete
    <% } %>
div(data-role="content")
    form#frmActivityCreate
        label(for="name") Name
        input#name(name="name", value!='<%= name %>')

        label(for="desc") Description
        input#desc(name="desc", value!='<%= desc %>')

        label(for="begindate") Begin Date
        input#begindate(type="date", name="begindate", value!='<%= begindate %>')

        label(for="begintime") Begin Time
        input#begintime(type="time", name="begintime", value!='<%= begintime %>')

        label(for="enddate") End Date
        input#enddate(type="date", name="enddate", value!='<%= enddate %>')

        label(for="endtime") End Time
        input#endtime(type="time", name="endtime", value!='<%= endtime %>')

        label(for="pos") Position
        input#pos(type="hidden", name="pos", value!='<%= pos %>')
        input#geoencode(name="geoencode")
        input#btnUseCurrentGPS(type='button', value="Use current position")

        <% if(isNew) { %>
        input(type='submit', value='Create', data-icon='add')
        <% } else { %>
        input#btnUpdate(type='submit', value='Update', data-icon="check")
        <% } %>
        #gmap
