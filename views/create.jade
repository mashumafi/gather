div(data-role="header", data-position="fixed", data-id='header')
    a#btnBack(href="#", data-icon="delete") Cancel
    h1 Create
div(data-role="content")
    form#frmActivityCreate
        label(for="name") Name
        input#name(name="name")

        label(for="description") Description
        input#description(name="description")

        label(for="begindate") Begin Date
        input#begindate(type="date", name="begindate")

        label(for="begintime") Begin Time
        input#begintime(type="time", name="begintime")

        label(for="enddate") End Date
        input#enddate(type="date", name="enddate")

        label(for="endtime") End Time
        input#endtime(type="time", name="endtime")

        label(for="location") Location
        input#location(name="location")
        button#btnUseCurrentGPS Use current position

        input(type='submit', value='Create')
